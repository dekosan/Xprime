alias @getpix_c := GETPIX;
alias @invert_c := INVERT;
alias @line_c := LINE;
alias @pixoff_c := PIXOFF;
alias @pixon_c := PIXON;
alias @rect_c := RECT;
alias @fillpoly_c := FILLPOLY;
