#define MOUSE_X 2
#define MOUSE_Y 3

dict Width := 320, Height := 240, Top := 0, Middle := 119, Bottom := 239, Left := 0, Centre := 159, Right := 319 @Screen;

alias @arc := ARC_P;
alias @blit := BLIT_P;
alias @dimgrob := DIMGROB_P;
alias @getpix := GETPIX_P;
alias @invert := INVERT_P;
alias @line := LINE_P;
alias @pixoff := PIXOFF_P;
